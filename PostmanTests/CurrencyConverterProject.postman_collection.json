					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Currencies should be available\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"var data = pm.response.json();\r",
							"pm.test(\"Currencies should be more than one\", function () {\r",
